<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="managerNode">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="id" type="xs:positiveInteger" minOccurs="1" maxOccurs="1"/>
        <xs:element name="apiKey" type="xs:string" minOccurs="1" maxOccurs="1"/>
        <xs:element name="tags" minOccurs="0" maxOccurs="1">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="tag" type="xs:string" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        <xs:element name="userNotes" type="userNotesType" minOccurs="0" maxOccurs="1"/>
        <xs:element name="clientDN" type="clientDNType" minOccurs="1" maxOccurs="1"/>
        <xs:element name="lastContact" type="xs:dateTime" minOccurs="1" maxOccurs="1"/>
      </xs:sequence>
      <xs:attribute name="dataVersion" type="xs:positiveInteger" use="required"/>
    </xs:complexType>
  </xs:element>

  <xs:complexType name="userNotesType">
    <xs:sequence>
      <xs:element name="userNote" type="userNoteType" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="userNoteType">
    <xs:sequence>
      <xs:element name="username" type="xs:string" minOccurs="1" maxOccurs="1"/>
      <xs:element name="createdDate" type="xs:dateTime" minOccurs="1" maxOccurs="1"/>
      <xs:element name="text" type="xs:string" minOccurs="1" maxOccurs="1"/>
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="clientDNType">
    <xs:restriction base="xs:string">
      <xs:pattern value="CN=[^,]+,O=[^,]+,L=[^,]+"/>
    </xs:restriction>
  </xs:simpleType>
</xs:schema>
