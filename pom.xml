<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <packaging>pom</packaging>
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.1.4</version> <!-- max version compatible with lombok 1.18.30 -->
  </parent>

  <groupId>org.aktin</groupId>
  <artifactId>broker-manager</artifactId>
  <version>1.0-SNAPSHOT</version>

  <modules>
    <module>persistence</module>
    <module>service</module>
    <!-- scheduler -->
    <module>security</module>
    <module>endpoint</module>
    <module>ui</module>
    <module>main</module>
  </modules>

  <properties>
    <maven.compiler.source>21</maven.compiler.source>
    <maven.compiler.target>21</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <aktin.query-model.version>1.0.4-SNAPSHOT</aktin.query-model.version>
    <testcontainers.version>1.19.7</testcontainers.version>
    <jaxb.version>2.3.3</jaxb.version>
  </properties>

  <dependencies>
    <!-- Provides the core data structures and interfaces for defining and submitting queries to the broker-server -->
    <dependency>
      <groupId>org.aktin.broker</groupId>
      <artifactId>query-model</artifactId>
      <version>${aktin.query-model.version}</version>
    </dependency>

    <!-- Essential libraries to build web applications with Spring including Spring MVC, embedded Tomcat server and other tools. -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- Java API for processing XML data using JAXB -->
    <dependency>
      <groupId>jakarta.xml.bind</groupId>
      <artifactId>jakarta.xml.bind-api</artifactId>
      <version>${jaxb.version}</version>
    </dependency>
    <!-- JAXB implementation to convert Java objects to XML and vice-versa -->
    <dependency>
      <groupId>org.glassfish.jaxb</groupId>
      <artifactId>jaxb-runtime</artifactId>
      <version>${jaxb.version}</version>
    </dependency>

    <!-- Libraries for testing Spring Boot applications including JUnit, Mockito, and other utilities. -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>
    <!-- Libraries to enable the programmatic launching and management of Docker containers for integration testing purposes. -->
    <dependency>
      <groupId>org.testcontainers</groupId>
      <artifactId>testcontainers</artifactId>
      <version>${testcontainers.version}</version>
      <scope>test</scope>
    </dependency>
    <!-- Provides integration between testcontainers and JUnit 5. -->
    <dependency>
      <groupId>org.testcontainers</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>${testcontainers.version}</version>
      <scope>test</scope>
    </dependency>
    <!-- Convenience features for integrating Spring Boot and testcontainers. -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-testcontainers</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
